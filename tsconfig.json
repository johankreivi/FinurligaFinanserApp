{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "cypress.d.ts", 
    "cypress/component/RegisterForm.cy.tsx", 
    "cypress/component/SignInForm.cy.tsx", 
    "cypress/component/Header.cy.tsx",
    "cypress/component/CreateBankAccountForm.cy.tsx",
    "cypress/component/BankAccountList.cy.tsx",
  ]
}
